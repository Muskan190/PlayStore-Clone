<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GameFragment"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white"


    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Light">
        <ImageView
            android:id="@+id/tollbar_back4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:src="@drawable/backarrow" />

        <ImageView
            android:id="@+id/toolbar_info4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:layout_marginRight="10dp"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            >

            <ImageView
                android:id="@+id/gameimageview2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/myimg"
                android:scaleType="fitXY"
                />

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="13dp"
            >

            <TextView
                android:id="@+id/gametextview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Name is shown here"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="serif"

                />

            <TextView
                android:id="@+id/gametextview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gametextview1"
                android:text="Description"
                android:maxLines="2"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"

                />

            <TextView
                android:id="@+id/gamestorage"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gametextview3"
                android:layout_marginTop="4dp"
                android:text="45 MB"
                android:textSize="12sp"
                android:textColor="@color/black"

                />


        </RelativeLayout>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:backgroundTint="#8765DA"
        android:text="Install"
        android:layout_marginTop="20dp"
        android:background="@drawable/btnbg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

</LinearLayout>